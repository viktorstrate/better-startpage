{
  "description": "A better startpage for your browser",
  "manifest_version": 2,
  "name": "Better Startpage",
  "short_name": "better-startpage",
  "version": "1.0",
  "homepage_url": "https://github.com/viktorstrate/better-startpage",
  "icons": {
    "32": "icons/icon-48.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["<all_urls>", "bookmarks", "history", "tabs"],

  "chrome_url_overrides": {
    "newtab": "/index.html?newtab=1"
  },

  "browser_action": {
    "default_icon": "icons/icon-32.png"
  }
}
